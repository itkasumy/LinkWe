.layout
	height 100%
	display flex
	flex-direction column
	header
		display block
		width 100%
		height 60px
		background #fff
		box-shadow 0 2px 20px 0 rgba(15,12,70,.1)
		.logo
			height 60px
			line-height 60px
			font-size: 24px
			font-weight 700
	.container
		flex 1
		display flex
		flex-direction row
		aside
			flex 0 0 120px
			height 100%
			background #222430
			.menu
				display block
				position relative
				width 120px
				height 41px
				line-height 42px
				text-align center
				color #757993
				font-size 14px
				font-weight 700
				.active, &:hover
					&:after
						content ""
						width 4px
						background #fff
						border-radius 2px
						position absolute
						right 10px
						top 25%
						bottom 25%
			el-menu
				background none
		main
			flex 1
			display flex
			flex-direction column
			.main
				flex 1
			footer
				height 80px
				background #ccc