.loginContainer
	width 296px
	height 480px
	padding 10px
	background #eee
	box-shadow 0 0 6px 0 rgba(180, 180, 180, .5)
	border-radius 4px
	.title
		width 200px
		height 40px
		line-height 40px
		margin-top 10px
		padding-left 20px
		font-size 20px
		font-weight 400
		.toLogin
			float right
			color #f5222d
			font-size 16px
	.loginWrap
		margin-top 20px
		.loginForm
			.inputBox
				width 100%
				height 40px
				overflow hidden
				line-height 40px
				margin-bottom 20px
				.text
					float left
				.telNum, .password
					float left
					.tel, .pwd, .confirpwd
						width 160px
						height 40px
						margin-left 10px
						padding 0 0 0 18px
						border-radius 4px
						border none
						outline none
						font-size 16px
						font-weight 600
				.check
					float left
					.checknumber
						width 110px
						height 40px
						margin-left 10px
						padding 0 0 0 20px
						border-radius 4px
						border none
						outline none
						font-size 16px
						font-weight 600
				.submit
					width 220px
					margin 0 auto
					input
						width 220px
						height 40px
						background #409EFF
						border-radius 4px
						border none
						outline none
						font-size 16px
						font-weight 600
						color #fff
			.getCheckCode
				width 180px
				height 40px
				background #f5222d
				margin 0 0 20px 42px
				border-radius 4px
				border none
				outline none
				font-size 14px
				font-weight 600
				color #fff